{% extends 'base.html.twig' %}

{% block nav %}
    <nav id="navbar" class="navbar sticky-top navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="index.php">{{ user.nom }} {{ user.prenom }}</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon">
                </span>
            </button>
            <div class="collapse navbar-collapse flex-row-reverse" id="navbarNav">
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="nav-link" href="#projet">Projets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="#competences">Compétence</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Me contacter</a>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="/admin">admin</a></li>
                </ul>
            </div>
        </div>
    </nav>

{% endblock %}

{% block body %}
    <section class="text-black ">
        <div class="container" id="acceuil">
            <div class="row">
                <div class="col">
                    <img src="uploads/images/{{ user.image }}" alt="image profil" class="rounded-circle"
                         style="width: 37%;">
                </div>
                <div class="col">
                    <p class="font-weight-bold h5" style="margin-top: 3%;">
                        {{ user.presentation }}
                    </p>
                    <!-- Button trigger modal -->

                    <a href="uploads/pdf/{{ user.pdf }}" download="CV_{{ user.nom }}_{{ user.prenom }}"
                       class="btn btn-primary btn-lg active" style="margin-left: 22%;" role="button"
                       aria-pressed="true">Telecharger CV</a>
                </div>
            </div>
        </div>
    </section>

    <section class=" projet" style="height: 229%;">
        <div class="container" id="projet">
            <p class="text-center font-weight-bold h3 pt-5 mb-5 text-black">projets</p>
            {% if  user.projet != null %}
                <div class="row row-cols-1 row-cols-md-3">
                    {% set projets = user.projet %}
                    {% for projet in projets %}
                        {% set nb = projet.images|length %}
                        <div class="col-sm-2">
                            <div class="card">
                                {% if projet.images != null %}
                                {% set images = projet.images %}
                                <div id="carouselExampleIndicators{{ projet.id }}" class="carousel slide"
                                     data-bs-ride="true">
                                    <div class="carousel-indicators">
                                        {% for i in range(1, nb) %}
                                            <button type="button"
                                                    data-bs-target="#carouselExampleIndicators{{ projet.id }}"
                                                    data-bs-slide-to="{{ i }}"
                                                    {% if i == 1 %}
                                                        class="active" aria-current="true"
                                                    {% endif %}
                                                    aria-label="Slide {{ i }}"></button>
                                        {% endfor %}

                                    </div>
                                    <div class="carousel-inner" style="max-height: 200px; min-height: 200px">
                                        {% for image in images %}
                                            <div class="carousel-item {% if loop.index == 1 %} active {% endif %}">
                                                <img src="uploads/images/{{ image }}" class="card-img-top" alt="...">
                                            </div>
                                        {% endfor %}

                                        <button class="carousel-control-prev" type="button"
                                                data-bs-target="#carouselExampleIndicators{{ projet.id }}"
                                                data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Previous</span>
                                        </button>
                                        <button class="carousel-control-next" type="button"
                                                data-bs-target="#carouselExampleIndicators{{ projet.id }}"
                                                data-bs-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Next</span>
                                        </button>
                                    </div>
                                    {% endif %}
                                </div>
                                <div>


                                    <div class="card-body">
                                        <div class="card-title">
                                            <h5 class="card-title">{{ projet.nom }}</h5>
                                            <p class="card-text">
                                            <p class="card-text">{{ projet.description }}</p>
                                            <button class="btn btn-primary" type="button" data-bs-toggle="collapse"
                                                    data-bs-target="#info{{ projet.id }}"
                                                    aria-expanded=" false"
                                                    aria-controls="info{{ projet.id }}">
                                                description
                                            </button>
                                            <a href="uploads/pdf/{{ user.pdf }}"
                                               download="CV_{{ user.nom }}_{{ user.prenom }}"
                                               class="btn btn-primary  active" role="button"
                                               aria-pressed="true">Telecharger CV</a>


                                            <div class="modal fade" id="Modal{{ projet.id }}"
                                                 tabindex="-1"
                                                 aria-labelledby="ModalLabel{{ projet.id }}"
                                                 aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title"
                                                                id="ModalLabel{{ projet.id }}">
                                                                cv
                                                            </h5>
                                                            <button type="button" class="btn-close"
                                                                    data-bs-dismiss="modal"
                                                                    aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <iframe src="uploads/pdf/{{ user.pdf }}" height="500px"
                                                                    width="100%"></iframe>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                                    data-bs-dismiss="modal">
                                                                Close
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="collapse" id="info{{ projet.id }}">
                                                <div class="card card-body">
                                                    {% set outils = projet.outils %}
                                                    {% set technos = projet.techno %}
                                                    <p>techno utilisé :
                                                        {% for techno in technos %}
                                                            {{ techno.label }}
                                                        {% endfor %}
                                                    </p>
                                                    <p>charge de travail : {{ projet.chargeTravail }} H</p>
                                                    <p>repartition du travauil : {{ projet.repartition }} </p>
                                                    <p>date début : {{ projet.debut|date('d/m/Y') }}</p>
                                                    <p>date fin : {{ projet.fin|date('d/m/Y') }}</p>
                                                    <p>outil utilisé :
                                                        {% for outil in outils %}
                                                            {{ outil.label }}
                                                        {% endfor %}
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </section>









    <section id="competences">


        <h1 style="text-align: center;margin-bottom: 3%;">Mes Compétences</h1>
        <div class="container">
            <div class="main-timeline">
                {% if  user.competences != null %}
                    {% set competences = user.competences %}
                    {% for competence in competences %}
                        <!-- start experience section-->
                        <div class="timeline">
                            <div class="icon"></div>
                            <div class="date-content">
                                <div class="date-outer">
						<span class="date">
							<span class="month">{{ competence.dateInitiation|date('M' , "Europe/Paris") }}</span>
							<span class="year">{{ competence.dateInitiation|date('Y') }}</span>
						</span>
                                </div>
                            </div>
                            <div class="timeline-content">
                                <h5 class="title">{{ competence.nom }}</h5>
                                <p class="description">
                                    {{ competence.description }}
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
                <!-- end experience section-->
            </div>
        </div>

    </section>

    <section class="text-black w-50 mx-auto ">
        <div class="contact" id="contact">
            <!--Section heading-->
            <h2 class="h1-responsive font-weight-bold text-center my-4 text-black">Me contacter</h2>
            <div class="row">
                <!--Grid column-->


                <div class="col-md-9 mb-md-0 mb-5">
                    {{ form_start(form, { attr: { id: 'form-cotact', novalidate: 'novalidate' } }) }}
                    <!--Grid row-->
                    <div class="row">
                        <!--Grid column-->
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                {{ form_row(form.nom) }}
                            </div>
                        </div>
                        <!--Grid column-->
                        <!--Grid column-->
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                {{ form_row(form.email) }}
                            </div>
                        </div>
                        <!--Grid column-->
                    </div>
                    <!--Grid row-->
                    <!--Grid row-->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="md-form mb-0">
                                {{ form_row(form.sujet) }}
                            </div>
                        </div>
                    </div>
                    <!--Grid row-->
                    <!--Grid row-->
                    <div class="row">
                        <!--Grid column-->
                        <div class="col-md-12">
                            <div class="md-form">
                                {{ form_row(form.message) }}
                            </div>

                        </div>
                    </div>
                    <!--Grid row-->
                    <button type="submit" class="btn btn-primary" name="envoyer" value="envoyer">envoyer</button>
                    </form>
                    <div class="status"></div>
                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="col-md-3 text-center text-black">
                    <ul class="list-unstyled mb-0">
                        <li>
                            <i class="fas fa-map-marker-alt fa-2x"></i>
                            <p>
                                {{ user.adresse }}
                            </p>
                        </li>
                        <li>
                            <i class="fas fa-phone mt-4 fa-2x"></i>
                            <p>
                                {{ user.tel }}
                            </p>
                        </li>
                        <li>
                            <i class="fas fa-envelope mt-4 fa-2x"></i>
                            <div class="hidden content">
                                <a href='https://mail.google.com/mail/u/0/#inbox?compose=new' target='_blank'>
                                    <p> {{ user.email }}</p>
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
                <!--Grid column-->
            </div>
        </div>
    </section>

{% endblock %}