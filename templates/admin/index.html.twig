    <h3>projets</h3>
    <a href="admin/ajouterProjet">ajouter un projet</a>
    {% if  user.projet != null %}

        {% set projets = user.projet %}
        {% for projet in projets %}
            {% set nb = projet.images|length %}

            <div class="card" style="width: 18rem">
            <img class="card-img-top" src="..." alt="">{% if projet.images != null %}
            {% set images = projet.images %}
            <div>
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
                <div class="carousel-indicators">
                    {% for i in range(1, nb) %}
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{ i }}"
                                {% if i == 1 %}
                                    class="active" aria-current="true"
                                {% endif %}
                                aria-label="Slide {{ i }}"></button>
                        {{ i }}
                    {% endfor %}

                </div>
                <div class="carousel-inner" style="max-height: 200px; min-height: 200px">
                    {% for image in images %}
                        {{ loop.index }}
                        <div class="carousel-item {% if loop.index == 1 %} active {% endif %}">
                            <img src="uploads/images/{{ image }}" class="d-block w-100" alt="...">
                        </div>
                    {% endfor %}

                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

        {% endif %}
            <div class="card-body">
                <h5 class="card-title">{{ projet.nom }}</h5>
                <p class="card-text">{{ projet.description }}</p>
            </div>
            <div class="card-body" style="line-height : 1;">

            <p>date début : {{ projet.debut|date('d/m/Y') }}</p>
            <p>date fin : {{ projet.fin|date('d/m/Y') }}</p>
            <p>charge de travail : {{ projet.chargeTravail }}</p>
            <p>repartition du travauil : {{ projet.repartition }} </p>
            {% set outils = projet.outils %}
            {% set technos = projet.techno %}
            <p>techno utilisé :
            {% for techno in technos %}
                {{ techno.label }}</p>
            {% endfor %}
            <p>outil utilisé :
            {% for outil in outils %}
                {{ outil.label }}</p>
            {% endfor %}


            <p>pdf : {{ projet.pdfName }}</p>
            <a href="admin/modifProjet/{{ projet.id }}">modifier</a>
            <a href="admin/suppProjet/{{ projet.id }}">supprimer</a>
        {% endfor %}
    {% endif %}
    </div>
    </div>
    </div>

    <h3>competence </h3>
    <a href="admin/ajouterCompetence">ajouter une competence</a>
    {% if  user.competences != null %}
        {% set competences = user.competences %}
        {% for competence in competences %}
            {{ competence.nom }}
            {{ competence.dateInitiation|date('d/m/Y') }}
            {{ competence.description }}
            {{ competence.images }}
            <img src="uploads/images/{{ competence.images }}" alt="">
            <a href="admin/modifCompetence/{{ competence.id }}">modifier</a>
            <a href="admin/suppCompetence/{{ competence.id }}">supprimer</a>
        {% endfor %}
    {% endif %}

{% endblock %}